# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/codeforge_production

# JWT Configuration (Legacy - will be phased out after Firebase migration)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-256-bits-long
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-256-bits-long
JWT_REFRESH_EXPIRES_IN=7d

# Firebase Admin Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# Server Configuration
PORT=3001
NODE_ENV=production
CORS_ORIGIN=https://your-frontend-domain.vercel.app

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Railway will automatically provide DATABASE_URL
# You need to set Firebase credentials, JWT secrets, and CORS_ORIGIN
# Get Firebase credentials from Firebase Console > Project Settings > Service Accounts