{
  "root": true,
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["dist", "node_modules", "src/middleware/auth.ts", "src/tests/setup.ts"],
  "rules": {
    "no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_" }
    ],
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.spec.ts"],
      "env": {
        "jest": true
      },
      "globals": {
        "beforeAll": "readonly",
        "afterAll": "readonly", 
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "describe": "readonly",
        "it": "readonly",
        "expect": "readonly",
        "jest": "readonly"
      },
      "rules": {
        "no-console": "off"
      }
    }
  ]
}